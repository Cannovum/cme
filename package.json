{
  "name": "cme",
  "version": "1.0.0",
  "description": "Single-Page-Application code for CME",
  "main": "app.js",
  "scripts": {
    "dev": "concurrently \"http-server ./dist/ -p 1234\" \"npm run build:watch\"",
    "build": "node build.js",
    "build:watch": "nodemon build.js",
    "deploy": "node build.js && aws s3 sync dist/ s3://cannovum-cme"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cannovum/cme.git"
  },
  "author": "Chris",
  "bugs": {
    "url": "https://github.com/Cannovum/cme/issues"
  },
  "homepage": "https://github.com/Cannovum/cme#readme",
  "devDependencies": {
    "@playwright/test": "^1.24.2",
    "@types/vimeo__player": "^2.16.3",
    "@vimeo/player": "^2.16.0",
    "axios": "^0.21.1",
    "lzutf8": "^0.6.0",
    "papaparse": "^5.3.1",
    "parcel": "^2.2.1"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "concurrently": "^7.0.0",
    "counterup2": "^2.0.2",
    "dotenv": "^16.0.1",
    "global.css": "^1.1.0",
    "nodemon": "^2.0.15",
    "parcel-bundler": "^1.12.5",
    "tippy.js": "^6.3.7"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "Safari 13"
  ],
  "targets": {
    "default": {
      "source": [
        "./src/cme.js",
        "./src/global.js",
        "./src/knowledgebase/knowledgebase.js"
      ],
      "engines": {
        "browsers": "not dead"
      }
    }
  },
  "nodemonConfig": {
    "ignore": [
      "./dist/"
    ]
  }
}
