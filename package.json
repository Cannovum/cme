{
	"name": "cme",
	"version": "1.0.0",
	"description": "Single-Page-Application code for CME",
	"scripts": {
		"dev": "concurrently \"http-server ./dist/ -p 1234\" \"npm run build:watch\"",
		"build": "node build.js",
		"build:watch": "nodemon build.js",
		"deploy": "npm run build && aws s3 sync dist/ s3://cannovum-cme"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Cannovum/cme.git"
	},
	"author": "Chris",
	"bugs": {
		"url": "https://github.com/Cannovum/cme/issues"
	},
	"homepage": "https://github.com/Cannovum/cme#readme",
	"devDependencies": {
		"@vimeo/player": "^2.16.0",
		"axios": "^0.21.1",
		"lzutf8": "^0.6.0",
		"papaparse": "^5.3.1",
		"parcel": "^2.2.1"
	},
	"dependencies": {
		"concurrently": "^7.0.0",
		"dotenv": "^16.0.1",
		"global.css": "^1.1.0",
		"nodemon": "^2.0.15",
		"parcel-bundler": "^1.12.5",
		"tippy.js": "^6.3.7"
	},
	"browserslist": [
		"> 0.5%",
		"last 2 versions",
		"not dead",
		"Safari 13"
	],
	"targets": {
		"default": {
			"source": [
				"./src/cme.js",
				"./src/global.js",
				"./src/knowledgebase/knowledgebase.js"
			],
			"engines": {
				"browsers": "not dead"
			}
		}
	},
	"nodemonConfig": {
		"ignore": [
			"./dist/"
		],
		"ext": "css,js,json"
	}
}
